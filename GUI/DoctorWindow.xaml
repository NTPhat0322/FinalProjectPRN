<Window x:Class="GUI.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch hẹn bác sĩ" Height="500" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F8FAFC" ResizeMode="NoResize" WindowStyle="None" Loaded="Window_Loaded">
    <Border CornerRadius="12" Background="#F8FAFC" BorderBrush="#0EA5E9" BorderThickness="1" Padding="0" SnapsToDevicePixels="True">
        <Grid>
            <!-- Custom Title Bar -->
            <DockPanel LastChildFill="False" Height="44" Background="#0EA5E9" VerticalAlignment="Top">
                <TextBlock Text="Lịch hẹn bác sĩ" Foreground="White" FontWeight="Bold" FontSize="18"
                           VerticalAlignment="Center" Margin="20,0,0,0" DockPanel.Dock="Left"/>
                <Button Width="32" Height="32" Margin="0,6,10,6" DockPanel.Dock="Right"
                        Background="Transparent" BorderBrush="{x:Null}" Cursor="Hand"
                        ToolTip="Đóng" Click="BtnClose_Click">
                    <Path Data="M6,6 L18,18 M6,18 L18,6" Stroke="White" StrokeThickness="2" StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
                </Button>
            </DockPanel>

            <StackPanel Margin="30,54,30,20">
                <TextBlock Text="Danh sách lịch hẹn của bạn" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#0EA5E9" Margin="0,0,0,10"/>

                <DataGrid x:Name="dgAppointments" AutoGenerateColumns="False" 
                          CanUserAddRows="False" IsReadOnly="True"
                          RowHeight="35" FontSize="14" 
                          AlternatingRowBackground="#F1F5F9"
                          GridLinesVisibility="None"
                          BorderBrush="#0EA5E9" BorderThickness="1"
                          HeadersVisibility="Column"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Khách hàng" Binding="{Binding Account.Name}" Width="*"/>
                        <DataGridTextColumn Header="Giới tính" Binding="{Binding Account.Gender}" Width="100"/>
                        <DataGridTextColumn Header="Dịch vụ" Binding="{Binding Service.Name}" Width="*"/>
                        <DataGridTextColumn Header="Thời gian" Binding="{Binding ScheduleTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Border>
</Window>