<Window x:Class="GUI.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProfileWindow" Height="430" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F1F5F9" Loaded="Window_Loaded">

    <Border CornerRadius="8" Padding="20" Margin="20" Background="White" BorderBrush="#E2E8F0" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Thông tin" FontSize="22" FontWeight="Bold" Foreground="#0EA5E9" Margin="0,0,0,20"/>

            <!-- Full Name -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Tên:" Grid.Column="0" FontWeight="Bold"/>
                <TextBox x:Name="txtName" Grid.Column="1" Height="28"/>
            </Grid>

            <!-- Email -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Email:" Grid.Column="0" FontWeight="Bold" Height="28" VerticalAlignment="Top"/>
                <TextBox x:Name="txtEmail" Grid.Column="1" Height="28" IsReadOnly="True"/>
            </Grid>

            <!-- Gender -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Giới tính:" Grid.Column="0" FontWeight="Bold"/>
                <ComboBox x:Name="cbGender" Grid.Column="1" Height="28">
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>
            </Grid>

            <!-- Date of Birth -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Ngày sinh:" Grid.Column="0" FontWeight="Bold"/>
                <DatePicker x:Name="dpDOB" Grid.Column="1" Height="28"/>
            </Grid>

            <!-- Role -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Vai trò:" Grid.Column="0" FontWeight="Bold"/>
                <TextBox x:Name="txtRole" Grid.Column="1" Height="28" IsReadOnly="True"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="Cập nhật" Width="100" Height="35"
                        Background="#22C55E" Foreground="White" BorderBrush="Transparent"
                        FontWeight="Bold" Click="btnUpdate_Click"/>
                <Button Content="Đóng" Width="100" Height="35"
                        Background="#F87171" Foreground="White" BorderBrush="Transparent"
                        FontWeight="Bold" Click="btnClose_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
