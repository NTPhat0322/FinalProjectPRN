<Window x:Class="GUI.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScheduleWindow" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F1F5F9" Loaded="Window_Loaded">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- DataGrid hiển thị danh sách lịch -->
        <DataGrid x:Name="dgSchedule" Grid.Row="0" AutoGenerateColumns="False" 
                  CanUserAddRows="False" HeadersVisibility="Column"
                  AlternatingRowBackground="#e0f7fa" RowBackground="White"
                  GridLinesVisibility="Horizontal" BorderBrush="#1976d2"
                  BorderThickness="1" Margin="0,0,0,10"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Dịch vụ" Binding="{Binding Service.Name}" Width="150"/>
                <DataGridTextColumn Header="Thời gian" Binding="{Binding ScheduleTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="200"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Service.Price, StringFormat='{}{0:N0}'}" Width="100"/>
                <DataGridTextColumn Header="Tên" Binding="{Binding Account.Name}" Width="150"/>

                <DataGridTemplateColumn Header="Hành vi" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xóa" 
                        Background="#F87171" Foreground="White" 
                        BorderBrush="Transparent" Padding="5,2"
                        Tag="{Binding Id}"
                        Click="btnDelete_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form thêm mới lịch -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" >
                <!-- Chọn Service -->
                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Dịch vụ:" FontWeight="Bold"/>
                    <ComboBox x:Name="cbService" Width="180" Height="30" DisplayMemberPath="Name"/>
                </StackPanel>

                <!-- Chọn ngày -->
                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Ngày:" FontWeight="Bold"/>
                    <DatePicker x:Name="dpDate" Width="140" Height="30"/>
                </StackPanel>

                <!-- Chọn giờ -->
                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Thời gian (HH:mm):" FontWeight="Bold"/>
                    <TextBox x:Name="txtTime" Width="80" Height="30" ToolTip="Enter time as HH:mm"/>
                </StackPanel>

                <!-- Button thêm -->
                <Button x:Name="btnAdd" Content="Thêm" Width="130" Height="40"
                        Background="#22C55E" Foreground="White" FontWeight="Bold"
                        Click="btnAdd_Click" Margin="0,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>