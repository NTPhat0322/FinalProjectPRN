<Window x:Class="GUI.ServiceForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Service Information" Height="502" Width="546"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="10,20,10,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="0,5,0,5"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="5" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" 
                              RenderingBias="Quality" ShadowDepth="2" 
                              Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" x:Name="FormTitle" 
                       Text="Add New Service" 
                       FontSize="22" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,20"/>

            <!-- Form Content -->
            <StackPanel Grid.Row="1">
                <Label Content="Service Name:"/>
                <TextBox x:Name="txtServiceName"/>

                <Label Content="Price:"/>
                <TextBox x:Name="txtServicePrice" PreviewTextInput="NumberValidationTextBox"/>

                <Label Content="Description:"/>
                <TextBox x:Name="txtServiceDescription" 
                         Height="80" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True" 
                         VerticalContentAlignment="Top" 
                         Padding="10"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="btnSave" 
                        Content="Save" 
                        Click="BtnSave_Click" 
                        Background="#27ae60" 
                        Foreground="White"/>

                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Click="BtnCancel_Click" 
                        Background="#95a5a6" 
                        Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
