<Window x:Class="GUI.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ServiceWindow" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F1F5F9" Loaded="Window_Loaded">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- DataGrid hiển thị danh sách Service -->
        <DataGrid x:Name="dgService" Grid.Row="0" AutoGenerateColumns="False" 
                  CanUserAddRows="False" HeadersVisibility="Column"
                  AlternatingRowBackground="#e0f7fa" RowBackground="White"
                  GridLinesVisibility="Horizontal" BorderBrush="#1976d2"
                  BorderThickness="1" Margin="0,0,0,10"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='{}{0:N0}'}" Width="100"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>

                <!-- Actions -->
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Update" 
                                        Background="#0284C7" Foreground="White" 
                                        BorderBrush="Transparent" Padding="5,2"
                                        Tag="{Binding Id}"
                                        Click="btnUpdate_Click"/>
                                <Button Content="Delete" 
                                        Background="#F87171" Foreground="White" 
                                        BorderBrush="Transparent" Padding="5,2"
                                        Tag="{Binding Id}"
                                        Click="btnDelete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form thêm/cập nhật service -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <StackPanel>
                    <TextBlock Text="Name:" FontWeight="Bold"/>
                    <TextBox x:Name="txtName" Width="180" Height="30"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Price:" FontWeight="Bold"/>
                    <TextBox x:Name="txtPrice" Width="100" Height="30"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Description:" FontWeight="Bold"/>
                    <TextBox x:Name="txtDescription" Width="250" Height="30"/>
                </StackPanel>

                <Button x:Name="btnSave" Content="Save" Width="120" Height="40"
                        Background="#22C55E" Foreground="White" FontWeight="Bold"
                        Click="btnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
