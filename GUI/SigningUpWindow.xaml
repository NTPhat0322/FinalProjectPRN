<Window x:Class="GUI.SigningUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Create Account" Height="661" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="0,5,15,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubHeaderStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="5" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" 
                              RenderingBias="Quality" ShadowDepth="2" 
                              Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Tạo tài khoản" Style="{StaticResource HeaderStyle}"/>
                <TextBlock Text="Điền các thông tin bên dưới" Style="{StaticResource SubHeaderStyle}"/>
            </StackPanel>

            <!-- Registration Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Email Field -->
                    <Label Content="Email*" Target="{Binding ElementName=txtEmail}"/>
                    <TextBox x:Name="txtEmail" />

                    <!-- Password Field -->
                    <Label Content="Mật khẩu*" Target="{Binding ElementName=txtPassword}"/>
                    <PasswordBox x:Name="txtPassword" />

                    <!-- Confirm Password Field -->
                    <Label Content="Xác thực mật khẩu*" Target="{Binding ElementName=txtConfirmPassword}"/>
                    <PasswordBox x:Name="txtConfirmPassword" />

                    <!-- Name Field -->
                    <Label Content="Họ Tên*" Target="{Binding ElementName=txtName}"/>
                    <TextBox x:Name="txtName" />

                    <!-- Date of Birth Field -->
                    <Label Content="Ngày sinh*" Target="{Binding ElementName=dpDateOfBirth}"/>
                    <DatePicker x:Name="dpDateOfBirth" />

                    <!-- Gender Field -->
                    <Label Content="Giới tính" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <RadioButton x:Name="rbMale" Content="Nam" GroupName="Gender" IsChecked="True"/>
                        <RadioButton x:Name="rbFemale" Content="Nữ" GroupName="Gender"/>
                    </StackPanel>

                    <!-- Register Button -->
                    <Button x:Name="btnRegister" Content="Tạo tài khoản" Click="BtnRegister_Click"
                            Margin="0,20,0,10"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
